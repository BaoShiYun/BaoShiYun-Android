<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="17dp">

    <EditText
        android:id="@+id/roomIdEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="直播间id" />

    <EditText
        android:id="@+id/enterCodeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="直播间口令" />

    <EditText
        android:id="@+id/userIdEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="用户id" />

    <EditText
        android:id="@+id/userNicknameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="用户昵称" />

    <RadioGroup
        android:id="@+id/roomTypeRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/roomTypeLiveRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="live 直播" />

        <RadioButton
            android:id="@+id/roomTypeInteractRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="互动直播" />
    </RadioGroup>

    <Button
        android:id="@+id/startLiveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="启动直播间" />

</LinearLayout>